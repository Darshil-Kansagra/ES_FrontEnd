@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
@model UserModel
<div class="container" id="container">
    <div class="form-container sign-up-container">
        <form asp-action="SaveSignUp" method="post">
            <h1>Sign Up</h1>
            <input type="text" placeholder="UserName" asp-for="UserName" />
            <span class="text-danger" asp-validation-for="UserName"></span>
            <input type="text" placeholder="Email" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
            <input type="password" placeholder="Password" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
            @if (TempData["message"] != null)
            {
                <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                <script type="text/javascript">
                    $(document).ready(function (e) {
                    swal("@TempData["message"]", {
                      buttons: {
                        confirm: {
                          className: "btn btn-success",
                        },
                      },
                    });
                    });
                </script>
            }
            <button type="submit">Sign Up</button>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <form asp-action="SaveLogin" method="post">
            <h1>Login</h1>
            <input type="text" placeholder="Username Or Email" name="NameOREmail" />
            <input type="password" placeholder="Password" name="password" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
            @if(TempData["message"] != null){
                <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                <script type="text/javascript">
                    $(document).ready(function (e) {
                    swal("@TempData["message"]", {
                      buttons: {
                        confirm: {
                          className: "btn btn-success",
                        },
                      },
                    });
                    });
                </script>
            }
            <a href="#">Forgot your password?</a>
            <button type="submit">Login</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>Please login with your personal info</p>
                <button class="ghost" id="signIn">Login</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hello, Friend! </h1>
                <p>Enter your personal details and start your journey with us</p>
                <button class="ghost" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/css/plugins.min.css" />
<script src="~/js/plugin/sweetalert/sweetalert.min.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}