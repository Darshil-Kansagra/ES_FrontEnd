@using ES_FrontEnd.Areas.Admin.Models
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ProductModel>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">ProductList</h4>
            </div>
        </div>
        <div class="card-body">

            <div class="table-responsive">
            @if (Model != null)
            {
                <table id="add-row"
                       class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ProductId</th>
                                <th>ProductName</th>
                                <th>ProductType</th>
                                <th>StockQuantity</th>
                                <th>CreatedDate</th>
                                <th>UpdatedDate</th>
                                <th style="width: 10%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>@data.ProductId</td>
                                    <td>@data.ProductName</td>
                                    <td>@data.ProductType</td>
                                    <td>@data.StockQuantity</td>
                                    <td>@data.CreatedDate</td>
                                    <td>@data.UpdatedDate</td>
                                    <td>
                                        <div class="form-button-action">
                                            <form asp-area="Admin" asp-controller="Product" asp-action="ViewProduct" method="post">
                                                <input type="hidden" name="id" value="@data.ProductId" />
                                                <button type="submit" class="btn btn-info me-2">View</button>
                                            </form>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Insert" asp-route-id="@data.ProductId">
                                                <button class="btn btn-secondary me-2">Edit</button>
                                            </a>
                                            <button class="btn btn-danger" id="Delete" onclick="confirmDelete(@data.ProductId)">Delete</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                </table>
            }
            else
            {
                <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                <script type="text/javascript">
                    $(document).ready(()=>{
                        swal("@TempData["message"]", {
                          buttons: {
                            confirm: {
                              className: "btn btn-success",
                            },
                          },
                        });
                    })
                </script>
            }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript">
    function confirmDelete(id){
      swal({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        type: "warning",
        buttons: {
            cancel: {
                visible: true,
                text: "No, cancel!",
                className: "btn btn-danger",
            },
            confirm: {
                text: "Yes, delete it!",
                className: "btn btn-success",
            },
        },
      }).then((willDelete) => {
        if (willDelete) {
          $.ajax({
              type:"DELETE",
              url:`/DeleteProduct/${id}`,
              success:function(data){
                swal(data.message, {
                icon: "success",
                buttons: {
                    confirm: {
                    className: "btn btn-success",
                    },
                },
                }).then((ok)=>{
                    if(ok){
                        window.location.reload();
                    }
                });
              }
          });
      } else {
        swal("Product is Safe", {
          buttons: {
            confirm: {
              className: "btn btn-success",
            },
          },
        });
        }
      });
    }
</script>
<link rel="stylesheet" href="~/css/plugins.min.css" />
<script src="~/js/plugin/sweetalert/sweetalert.min.js"></script>