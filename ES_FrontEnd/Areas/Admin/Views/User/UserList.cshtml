@using ES_FrontEnd.Areas.Admin.Models
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<UserModel>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">UserList</h4>
            </div>
        </div>
        <div class="card-body">

            <div class="table-responsive">
            @if(Model != null){
                <table id="add-row"
                       class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>UserId</th>
                            <th>UserName</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>IsActive</th>
                            <th style="width: 10%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var data in Model)
                        {
                            <tr>
                                <td>@data.UserId</td>
                                <td>@data.UserName</td>
                                <td>@data.Email</td>
                                <td>@data.Role</td>
                                <td>@data.IsActive</td>
                                <td>
                                    <div class="form-button-action">
                                            <a asp-area="Admin" asp-controller="User" asp-action="Insert" asp-route-id="@data.UserId">
                                                <button type="button" class="btn btn-secondary me-2">Edit</button>
                                            </a>
                                            @if(data.IsActive == false){
                                                <button class="btn btn-danger" disabled="disabled">
                                                    Delete
                                                </button>
                                            }
                                            else{
                                                <button class="btn btn-danger" id="Delete" onclick="confirmDelete(@data.UserId)">Delete</button>
                                            }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                <script type="text/javascript">
                    $(document).ready(()=>{
                        swal("@TempData["message"]", {
                          buttons: {
                            confirm: {
                              className: "btn btn-success",
                            },
                          },
                        });
                    })
                </script>
            }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript">
        function confirmDelete(id){
          swal({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            type: "warning",
            buttons: {
                cancel: {
                    visible: true,
                    text: "No, cancel!",
                    className: "btn btn-danger",
                },
                confirm: {
                    text: "Yes, delete it!",
                    className: "btn btn-success",
                },
            },
          }).then((willDelete) => {
            if (willDelete) {
              $.ajax({
                  type:"DELETE",
                  url:`/SoftDelete/${id}`,
                  success:function(data){
                    swal(data.message, {
                    icon: "success",
                    buttons: {
                        confirm: {
                        className: "btn btn-success",
                        },
                    },
                  }).then((ok)=>{
                      if(ok){
                          window.location.reload();
                      }
                  });
                  }
              });
          } else {
            swal("Account is Safe", {
              buttons: {
                confirm: {
                  className: "btn btn-success",
                },
              },
            });
            }
          });
        }
</script>
<link rel="stylesheet" href="~/css/plugins.min.css" />
<script src="~/js/plugin/sweetalert/sweetalert.min.js"></script>