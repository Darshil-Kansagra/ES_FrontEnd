@using ES_FrontEnd.Areas.Admin.Models
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@model IEnumerable<OrderModel>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">OrderList</h4>
            </div>
        </div>
        <div class="card-body">

            <div class="table-responsive">
            @if (Model != null)
            {
                <table id="add-row"
                       class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>OrderId</th>
                                <th>Price</th>
                                <th>ShippingAddress</th>
                                <th>PaymentMode</th>
                                <th>OrderDate</th>
                                <th>UserName</th>
                                <th style="width: 10%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>@data.OrderId</td>
                                    <td>@data.Price</td>
                                    <td>@data.ShippingAddress</td>
                                    <td>@data.PaymentMode</td>
                                    <td>@data.OrderDate</td>
                                    <td>@data.UserName</td>
                                    <td>
                                        <div class="form-button-action">
                                            <button class="btn btn-secondary me-2">Edit</button>
                                            <button class="btn btn-danger" id="Delete" onclick="confirmDelete(@data.UserId)">Delete</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                </table>
            }
            else
            {
                <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                <script type="text/javascript">
                    $(document).ready(()=>{
                        swal("@TempData["message"]", {
                          buttons: {
                            confirm: {
                              className: "btn btn-success",
                            },
                          },
                        });
                    })
                </script>
            }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript">
    function confirmDelete(id){
      swal({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        type: "warning",
        buttons: {
            cancel: {
                visible: true,
                text: "No, cancel!",
                className: "btn btn-danger",
            },
            confirm: {
                text: "Yes, delete it!",
                className: "btn btn-success",
            },
        },
      }).then((willDelete) => {
        if (willDelete) {
          $.ajax({
              type:"DELETE",
              url:`/OrderDelete/${id}`,
              success:function(data){
                swal(data.message, {
                icon: "success",
                buttons: {
                    confirm: {
                    className: "btn btn-success",
                    },
                },
              }).then((ok)=>{
                  if(ok){
                      window.location.reload();
                  }
              });
              }
          });
      } else {
        swal("Order is Safe", {
          buttons: {
            confirm: {
              className: "btn btn-success",
            },
          },
        });
        }
      });
    }
</script>
<link rel="stylesheet" href="~/css/plugins.min.css" />
<script src="~/js/plugin/sweetalert/sweetalert.min.js"></script>